extends ./layouts/home

append head
	link(rel="stylesheet", type="text/css", href="/css/home.css")

block home-content
	p
		if !justRegistered
			| &larr; 
		a(href="/home") Projects
	h2 #{justCreated ? "Project created!" : name + " installation"}
	p.
		To install #{justCreated ? "your new" : "the"} hit counter, simply copy the following HTML snippet to each
		page for which you want to record hits:
	pre
		code.
			&lt;script src="//hogg-blake.co.uk:3000/hit/#{id}"&gt;&lt;/script&gt;
	p
		a(class="btn btn-primary" href="/project/" + id) View project